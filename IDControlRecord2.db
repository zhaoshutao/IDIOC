#PLC2IOC
record(bi,"Test:bi")
{
	field(DESC,"Testbi")
	field(DTYP,"opc")
	field(INP,"2 PLC1|MAIN.OPC_TEST_Bi")
	field(SCAN,"I/O Intr")
	# TSE=0  => EPICSTIME=SYSTEMTIME
	# TSE=-2 => EPICSTIME=OPC-SERVER-TIME
       	#field(TSE,"-2")
	#PINI=0 UDF INVALID until OPC server updates value
	#PINI=1 value will be read and UDF gets VALID
        	#field(PINI,"1")
}
